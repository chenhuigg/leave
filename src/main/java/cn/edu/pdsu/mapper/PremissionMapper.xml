<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.pdsu.mapper.PremissionMapper">
	<insert id="addPremissions">
		INSERT INTO act_r_p (id,roleid,premissionid) VALUES
		<foreach collection="ids" item="premissionid" separator=",">
			(UUID(),#{roleid},#{premissionid})
		</foreach>
	</insert>
	<!-- 删除权限 -->
	<delete id="delPremissions">
		DELETE FROM act_r_p
		WHERE roleid=#{roleid} AND premissionid IN
		<foreach collection="ids" open="(" close=")" separator="," item="premissionid">
			#{premissionid}
		</foreach>
	</delete>
	
</mapper>